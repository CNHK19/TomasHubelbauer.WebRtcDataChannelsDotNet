<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="Rhaeo.Agenda.Views.OfferView">
  <StackPanel>
    <HyperlinkButton Content="1. Open Agenda Web client." NavigateUri="{Binding AgendaWebUrl}" />
    <TextBlock Text="2: Scan this offer QR code using the webcam of the device you are viewing the page on." />
    <TextBlock Text="3: Tap the screen." />
    <TextBlock Text="4: Scan shown answer QR code using this device." />
    <TextBlock Text="5: Enjoy." />
    <Image Height="500" Source="{Binding ImageSource}" Width="500" />
  </StackPanel>
</Page>
